<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:contentDescription="Notification Card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@color/lightBackground">

        <!-- Profile Image with content description for accessibility -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/profile_header_background"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Image" />

        <!-- Notification Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Announcement"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNoticeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice Title"
                android:contentDescription="Notice Title" />

            <TextView
                android:id="@+id/tvNoticeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice Description"
                android:contentDescription="Notice Description" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
