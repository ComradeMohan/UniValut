<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView to allow scrolling when content exceeds screen size -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Greeting and Notification Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <!-- Greeting Text -->
                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning,"
                    android:textSize="22sp"
                    android:textColor="#222222"
                    android:fontFamily="sans-serif"
                    android:layout_alignParentStart="true"/>

                <!-- Student Name -->
                <TextView
                    android:id="@+id/tvStudentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mohan Reddy"
                    android:layout_marginTop="25dp"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_toEndOf="@id/tvGreeting"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"/>

                <!-- Notification Icon -->
                <ImageView
                    android:id="@+id/notificationIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="21dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="Notification Icon"
                    android:src="@drawable/ic_notifications" />
            </RelativeLayout>

            <!-- Search Bar -->
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Search courses, events, etc."
                android:drawableStart="@android:drawable/ic_menu_search"
                android:background="@drawable/search_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp"
                android:imeOptions="actionSearch"  />

            <!-- Notification Section (e.g. Announcements) -->
            <LinearLayout
                android:id="@+id/notification_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/announcement_bg"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvNoticeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notice Title"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/tvNoticeDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notice description will appear here."
                    android:textSize="16sp"
                    android:textColor="#ffff"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Title for Pending Courses Section -->
            <TextView
                android:text="Your Pending Courses"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- RecyclerView for Pending Courses -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPendingSubjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false"
            android:padding="8dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
