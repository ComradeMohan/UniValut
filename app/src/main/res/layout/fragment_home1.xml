                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning,"
                    android:textSize="22sp"
                    android:textColor="#222222"
                    android:fontFamily="sans-serif"
